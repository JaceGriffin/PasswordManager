;output: AX = num of chars
proc readFileToDX
    push bp
    mov bp, sp
        
    ;open file for reading
    mov ah, 3Dh
    mov al, 0
    mov dx, [bp+4]
    int 21h
    
    ;read from file
    mov bx, ax
    mov cx, 100
    mov dx, offset data_buffer
    mov ah, 3Fh
    int 21h
    push ax
    
    ;close file
    mov ah, 3Eh
    int 21h
    
    pop ax
    pop bp
    ret 2
endp readFileToDX   



